<!DOCTYPE html>
<html lang="en">
<head>
  {{>header}}
  
  <title>Weather App</title>
</head>
<body>
    {{>navbar}}

    <div class="container-fluid main-header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                
                <div class="main-contain">
                    <form class="temp-form">
                        <input type="text" id="cityName" placeholder="Please Enter Your City Name" autocomplete="off">
                        <input type="submit" id="submitBtn" value="search">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top-layer">
                        <p id="day"> Friday</p>
                        <p id="date">12 Aug</p>
                    </div>
                    <div class="main-layer">
                        <p id="cityname"> Get Current Temperature Here</p>

                       <div class="middle-layer data_hide"> 
                                <p id="temp"><span>0</span><sup>o</sup>C</p>
                                <p id="status"> <i class="fa-solid fa-cloud"></i></p>
                        </div>
                    </div>
                     
                </div>
            </div>
        </div>
    </div>

{{>footer}}

<script src="js/main.js"></script>

   </body>
</html>